/* pages/personal/personal.wxss */
.user-info{
  position: relative;
  width: 100%;
  height: 350rpx;
}
.user-info .bg{
  width: 100%;
  height: 350rpx;
}
.user-info .avatar{
  position: absolute;
  top: 36rpx;
  left: 52rpx;
  width: 174rpx;
  height: 174rpx;
  border: 8rpx solid #fe6260;
  border-radius: 50%;
}
.user-info .username{
  position: absolute;
  top: 80rpx;
  left: 260rpx;
  font-size: 36rpx;
  color: #fff;
}
.user-info .more{
  position: absolute;
  top: 136rpx;
  left: 260rpx;
  font-size: 28rpx;
  color: #fff;
}
.user-info .more::after{
  content: "";
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border: 1rpx solid #fff;
  border-left: 0;
  border-top: 0;
  transform: rotate(45deg) translateX(16rpx) translateY(-20rpx);
}
/* 菜单栏 */
.list-view{
  width: 100%;
  padding: 0 24rpx;
  background: #fff;
  box-sizing: border-box;
}
.list-view .item{
  height: 88rpx;
  border-bottom: 1rpx solid #eee;
  flex-direction: row;
  justify-content: inherit;
}
.list-view .icon{
  width: 48rpx;
  height: 48rpx;
  margin-right: 26rpx;
}
.list-view .title{
  display: block;
  flex: 1;
  font-size: 30rpx;
}