/* pages/partyBuilding/partyBuilding.wxss */
/* 通知栏 */
.tips{
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  padding: 0 24rpx;
  background: #fff;
}
.tips .icon{
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}
.tips text{
  font-size: 26rpx;
}
/* 导航栏 */
.nav{
  flex-direction: row;
  width: 100%;
  height: 226rpx;
  padding: 0 26rpx;
  background: #fff;
}
.nav .icon{
  display: block;
  width: 82rpx;
  height: 82rpx;
  margin: 0 auto 15rpx;
}
.nav .title{
  display: block;
  font-size: 26rpx;
}
/* 新闻中心 */
.section{
  background: #fff;
}
.section .title{
  height: 90rpx;
  border-bottom: 1rpx solid #ccc;
}
.section .bg{
  width: 100%;
  height: 90rpx;
}
.section .title text{
  position: absolute;
  left: 57rpx;
  top: 50%;
  margin-top: -17rpx;
  line-height: 40rpx;
  font-size: 34rpx;
}
.section .title .line{
  position: absolute;
  top: 50%;
  left: 26rpx;
  width: 7rpx;
  height: 40rpx;
  margin-top: -20rpx;
  background-color: #e52015;
}
.section_gap{
  height: 554rpx;
  padding-left: 26rpx;
  flex-wrap: wrap;
  align-items: inherit;
}
.scroll-item{
  flex-direction: row;
  box-sizing: border-box;
  width: 90%;
  height: 184rpx;
  margin-right: 26rpx;
  border-bottom: 1rpx solid #ccc;
}
.scroll-item:nth-of-type(3n){
  border: none;
}
.scroll-item .news-title{
  display: block;
  font-size: 30rpx;
}
.scroll-item .banner{
  display: block;
  width: 210rpx;
  height: 126rpx;
  margin-left: 28rpx;
}
/* 时代先锋 */
.times .swiper{
  height: 700rpx;
}
.times .times-item{
  padding: 30rpx 40rpx;
  box-sizing: border-box; 
}
.times .banner{
  height: 700rpx;
}
.times .news-title{
  position: absolute;
  top: 26rpx;
  left: 26rpx;
  right: 26rpx;
  z-index: 9;
}